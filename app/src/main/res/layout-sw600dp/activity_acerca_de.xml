<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AcercaDeActivity">

    <include android:id="@+id/miActionBar"
        layout="@layout/action_bar"
        >

    </include>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/programador"
        android:layout_centerHorizontal="true"
        app:civ_border_width="2dp"
        app:civ_border_color="#EC2516"
        app:civ_circle_background_color="@color/colorAccent"
        android:layout_below="@id/miActionBar"/>

    <TextView
        android:id="@+id/tvDescripcionBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:text="Desarrollador principiante con conocimientos de diferentes lenguajes como C, C#, C++ y python. Autodidacta en desarrollo web y desarrollo de aplicaciones móviles.
Presenta gran interés en tecnología y temas afines a la misma."/>


</RelativeLayout>